<%= form_for(@flight, :url => root_path, :html => { :method => 'GET'}) do |f| %>
    Origin
    <%= f.select(:origin_id, @planet_options)%>
    Destination
    <%= f.select(:destination_id, @planet_options)%>
    Nb of passengers
    <%= select_tag "people", options_for_select([1,2,3,4]) %>
    <%= f.submit value="search" %>
<%end%>
